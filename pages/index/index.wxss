/**index.wxss**/
.container {
  position: relative;
}

.chooseinfo {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;

  width: 700rpx;
  margin-right: 25rpx;
  margin-left: 25rpx;
  height: 20vh;
  border-bottom: 1px solid black;
}

.rank {
  display: flex;

  width: 250rpx;
  height: 10vh;
  border-radius: 20rpx;

  justify-content: center;
  align-items: center;
}

.type {
  display: flex;

  width: 250rpx;
  height: 10vh;
  border: 1px solid #aaa;
  border-radius: 20rpx;
  background-color: #2ec2ba;

  justify-content: center;
  align-items: center;
}

/* 今日计划部分 */
.plan{
  display: flex;
  position: relative;
  flex-wrap: wrap;

  width: 650rpx;

  border: 1px solid #FFFFFF;
  border-radius: 25rpx;
}

.need2Do, .review{
  width: 250rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;

  text-align: center;
}

.startText{
  width: 80px;
  height: 30px;
  padding-top: 10px;
  margin-left: auto;
  margin-right: auto;
  border: 1px solid black;
  border-radius: 10px;

  text-align: center;
}

.todayPlan{
  width: 100%;
  text-align: center;
}

/* 不需要的东西 */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}