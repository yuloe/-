/* pages/notebook/notebook.wxss */
.container {
  display: flex;
}

.notebook {
  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 28px;
  width: 250rpx;
  padding: 50rpx;
}

scroll-view {
  display: flex;
  flex-direction: row;
  width: 600rpx;
  height: 53vh;
  border: 3px solid #f5b619;
  border-radius: 20rpx;
  background-color: #ffdead;
}

.block {
  display: flex;
  align-items: center;

  height: 100rpx;
  width: 550rpx;
  margin-right: auto;
  margin-left: auto;
  font-size: 35rpx;
}

.review {
  display: flex;
  justify-content: center;
  align-items: center;

  font-size: 16px;
  width: 300rpx;
  height: 90rpx;
  margin-top: 60rpx;
  border: 1px solid #da8255;
  border-radius: 30rpx;
  background-color: #d88a63;
}